@model ClubbyBook.Web.UI.Areas.Default.Models.Account.SignInInfo

@{
    ViewBag.Title = "Войти в социальную сеть любителей книг";
    Layout = "~/Areas/Default/Views/Shared/Master.cshtml";
}

@Html.Partial("Header", new ClubbyBook.Web.UI.Areas.Default.Models.Common.Header() { Title = "Вход" })

<div class="EditRows">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="Error">
            @Html.ValidationSummary()
        </div>
    }
    <form method="post" defaultbutton="sign-in">
        <ul class="EditList">
            <li class="EditListItem">
                <div class="Label">@Html.DisplayNameFor(m => m.Email):</div>
                <div class="Value">
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "TextBox", autofocus = "autofocus" })
                    </div>
                </div>
                <div class="Clear"></div>
            </li>
            <li class="EditListItem">
                <div class="Label">@Html.DisplayNameFor(m => m.Password):</div>
                <div class="Value">
                    <div class="col-lg-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "TextBox" })
                    </div>
                </div>
                <div class="Clear"></div>
            </li>
            <li class="EditListItem">
                <div class="Label"></div>
                <div class="Value">
                    <div class="col-lg-4">
                        <span class="CheckBox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </span>
                    </div>
                </div>
                <div class="Clear"></div>
            </li>
            <li class="EditListItem">
                <div class="Label"></div>
                <div class="Value">
                    <div class="col-lg-4">
                        <a href="@Url.GoTo(CommonUrlTemplates.ResetPassword)">Забыли пароль?</a>
                    </div>
                </div>
                <div class="Clear"></div>
            </li>
            <li class="EditListItem">
                <div class="Buttons">
                    <input type="submit" id="sign-in" class="Button" value="Вход" />
                </div>
                <div class="Clear"></div>
            </li>
        </ul>
    </form>
</div>