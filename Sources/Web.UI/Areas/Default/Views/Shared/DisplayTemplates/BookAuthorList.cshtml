@model ClubbyBook.Web.UI.Areas.Default.Models.Book.BookAuthorListViewModel

<div class="BookAuthorsList">
    <ul>
        @for (int i = 0; i < Model.Authors.Length; i++)
        {
            var author = Model.Authors[i];
            var authorFullName = (i != Model.Authors.Length - 1) ? author.FullName + "," : author.FullName;

            <li>
                <a href="@Url.GoTo(DefaultUrlTemplates.ViewAuthor, author.UrlRewrite)">@authorFullName</a>
            </li>
        }
    </ul>
</div>