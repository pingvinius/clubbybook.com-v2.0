@model ClubbyBook.Web.UI.Areas.Default.Models.Book.BookGenreListViewModel

<div class="BookGenresList">
    <ul>
        @for (int i = 0; i < Model.Genres.Length; i++)
        {
            var genre = Model.Genres[i];
            var genreFullName = (i != Model.Genres.Length - 1) ? genre.FullName + "," : genre.FullName;

            <li>
                <a href="@Url.GoTo(DefaultUrlTemplates.BooksByGenre, genre.UrlRewrite)">@genreFullName</a>
            </li>
        }
    </ul>
</div>