@model ClubbyBook.Web.UI.Areas.Admin.Models.Book.BookViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}

<div class="page-details">

    @Html.Partial("Header", Html.GetHeaderBlockForDetails(Model.Id, Model.Title))

    <div class="page-fieldset">

        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Image):</dt>
            <dd>@Html.DisplayFor(model => model.Image)</dd>

            <dt>@Html.DisplayNameFor(model => model.Title):</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>@Html.DisplayNameFor(model => model.OriginalTitle):</dt>
            <dd>@Html.DisplayFor(model => model.OriginalTitle)</dd>

            <dt>@Html.DisplayNameFor(model => model.AuthorList):</dt>
            <dd>@Html.DisplayFor(model => model.AuthorList)</dd>

            <dt>@Html.DisplayNameFor(model => model.Genre):</dt>
            <dd>@Html.DisplayFor(model => model.Genre)</dd>

            <dt>@Html.DisplayNameFor(model => model.Collection):</dt>
            <dd>@Html.DisplayFor(model => model.Collection)</dd>

            <dt>@Html.DisplayNameFor(model => model.Confirmed):</dt>
            <dd>@Html.DisplayFor(model => model.Confirmed)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description):</dt>
            <dd>@Html.MultilineDisplayFor(model => model.Description)</dd>

            <dt>@Html.DisplayNameFor(model => model.UrlRewrite):</dt>
            <dd>@Html.DisplayFor(model => model.UrlRewrite)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreatedDate):</dt>
            <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>

            <dt>@Html.DisplayNameFor(model => model.LastModifiedDate):</dt>
            <dd>@Html.DisplayFor(model => model.LastModifiedDate)</dd>
        </dl>
    </div>
</div>